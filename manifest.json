{
  "manifest_version": 3,
  "name": "PlayAware",
  "version": "1.0.0",
  "description": "Automatically adjusts video playback speed based on window focus and configured domains",
  "permissions": ["storage", "tabs", "activeTab", "notifications"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "commands": {
    "toggle-extension": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Toggle extension on/off"
    }
  }
}
